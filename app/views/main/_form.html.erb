<%= form_with(url: main_path, scope: :sales, local: false, class: "form-inline") do |form| %>
  <div class="form-group flex-grow-1">
    <%= form.label 'Revenue', class: "mr-2, font-weight-bold" %>
  </div>
  <div class="form-group">
    <%= form.label :from, class: "mr-2" %>
    <%= form.text_field :from, class: "form-control" %>
  </div>
  <div class="form-group ml-5">
    <%= form.label :to, class: "mr-2" %>
    <%= form.text_field :to, class: "form-control" %>
  </div>
  <button type="submit" class="ml-5 btn btn-default">Refresh</button>
<% end %>